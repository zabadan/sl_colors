case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../has-ansi/cli.js" "$@"
  ret=$?
else 
  node  "$basedir/../has-ansi/cli.js" "$@"
  ret=$?
fi
exit $ret
